{
  "name": "genz",
  "author": "Greg Skiano",
  "license": "MIT",
  "type": "module",
  "version": "0.4.0",
  "description": "Streaming-first SSR for Node Apps",
  "main": "genz.build.mjs",
  "scripts": {
    "test": "node test/_.mjs",
    "dev": "nodemon example/app.mjs",
    "build": "rollup src/genz.mjs --plugin terser --file genz.build.mjs",
    "playground:dev": "vite serve playground --config playground/vite.config.js",
    "playground:build": "BASE=/genz/ vite build playground --config vite.config.j",
    "deploy:playground": "git subtree push --prefix playground/dist origin gh-pages",
    "release:patch": "npm test && npm run build && npm version patch && git push origin --tags && npm publish",
    "release:minor": "npm test && npm run build && npm version minor && git push origin --tags && npm publish",
    "release:major": "npm test && npm run build && npm version major && git push origin --tags && npm publish"
  },
  "devDependencies": {
    "@vue/compiler-ssr": "^3.2.31",
    "chalk": "^5.0.0",
    "express": "^4.17.3",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.3.2",
    "regexparam": "^2.0.0",
    "rollup": "^2.67.3",
    "rollup-plugin-terser": "^7.0.2",
    "vue": "^3.2.31",
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-javascript": "^0.19.7",
    "@codemirror/view": "^0.19.44",
    "ts-dedent": "^2.2.0",
    "vite": "^2.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skiano/genz.git"
  },
  "bugs": {
    "url": "https://github.com/skiano/genz/issues"
  },
  "homepage": "https://github.com/skiano/genz#readme"
}
